<!DOCTYPE html>
<html>
    <head>
        <title>HTML :)</title> 
        <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/style.css') }}">
        <script src="/static/js/libs/axios.min.js"></script>
        <script src="/static/js/libs/jquery.min.js"></script>
        <script src="/static/js/libs/js.cookie.min.js"></script>
    </head>
    <body>
        <nav class="navbar">
            <div class="logo">
                <a href="index.html">HD Messenger</a>
            </div>
            {% if current_user.username not in session['username'] %}
                <p>You're not logged in!</p>
            {% else %}
                <p>Logged in as: {{ current_user.username }}</p>
                <form action="{{ url_for('logout') }}" method="POST">
                    <input id="logout" type="submit" value="Logout">
                </form>
            {% endif %}
            <ul class="nav-links">
                <div class="menu">
                    <li><a href={{ url_for('index') }}>Home</a></li>
                    <li><a href={{ url_for('forum') }}>Forum</a></li>
                    <li><a href={{ url_for('login') }}> Login</a></li>
                    <li><a href={{ url_for('signup') }}> Signup</a></li>
                    <li><a href="account.html">Account</a></li>
                    <a href={{ url_for('index') }} id="book-button" class="navigation-button">Make a post</a>
                </div>
            </ul>
        </nav>
        {% block content %} {% endblock %}
    </body>
</html>